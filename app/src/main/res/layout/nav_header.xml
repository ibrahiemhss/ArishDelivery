<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_side_margin"
    android:paddingLeft="@dimen/nav_header_side_margin"
    android:paddingRight="@dimen/nav_header_side_margin"
    android:paddingTop="@dimen/nav_header_side_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageUser"
        android:layout_width="@dimen/nav_header_circleimageview_width"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:src="@drawable/ic_account_box"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"/>

    <TextView
        android:id="@+id/NaveTxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_header_txt_padding"
        android:layout_marginBottom="@dimen/nav_header_txt_bottom_margin"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/login_primary_dark"
        android:text="@string/name" />



    <TextView
        android:id="@+id/NaveTxtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_header_txt_padding"
        android:layout_marginBottom="@dimen/nav_header_txt_bottom_margin"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/login_primary_darker"
        android:inputType="textMultiLine"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/email" />



</LinearLayout>