<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_marginBottom="@dimen/list_bottom_padding"
        tools:ignore="PrivateResource"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipe_content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.Main.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/list_bottom_padding"
            android:paddingLeft="@dimen/list_side_padding"
            android:paddingRight="@dimen/list_side_padding"
            android:paddingTop="@dimen/list_top_padding"
            android:scrollbarStyle="outsideOverlay" />

    </RelativeLayout>

